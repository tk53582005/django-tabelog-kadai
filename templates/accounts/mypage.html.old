{% extends 'layouts/base.html' %}
{% load static %}

{% block title %}マイページ - NAGOYAMESHI{% endblock %}

{% block content %}
<div class="container mt-4">
    <!-- パンくずナビ -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{% url 'restaurants:index' %}">トップ</a></li>
            <li class="breadcrumb-item active" aria-current="page">マイページ</li>
        </ol>
    </nav>

    <div class="row">
        <!-- サイドバー -->
        <div class="col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-user"></i> メニュー</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{% url 'accounts:mypage' %}" class="list-group-item list-group-item-action active">
                        <i class="fas fa-home"></i> マイページ
                    </a>
                    <a href="{% url 'accounts:profile_edit' %}" class="list-group-item list-group-item-action">
                        <i class="fas fa-edit"></i> プロフィール編集
                    </a>
                    <a href="{% url 'accounts:password_change' %}" class="list-group-item list-group-item-action">
                        <i class="fas fa-key"></i> パスワード変更
                    </a>
                    
                    <!-- サブスクリプション関連リンク -->
                    {% if user.is_premium %}
                    <a href="{% url 'accounts:subscription_manage' %}" class="list-group-item list-group-item-action text-warning">
                        <i class="fas fa-crown"></i> サブスクリプション管理
                    </a>
                    {% else %}
                    <a href="{% url 'accounts:subscription_plan' %}" class="list-group-item list-group-item-action text-warning">
                        <i class="fas fa-crown"></i> プレミアム会員になる
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- メインコンテンツ -->
        <div class="col-lg-9">
            <!-- 会員情報カード -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-user-circle"></i> 会員情報</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">お名前</td>
                                    <td>
                                        {% if user.last_name or user.first_name %}
                                            {{ user.last_name }} {{ user.first_name }}
                                        {% else %}
                                            <span class="text-muted">未設定</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">メールアドレス</td>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">会員種別</td>
                                    <td>
                                        {% if user.is_premium %}
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-crown"></i> プレミアム会員
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">無料会員</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">郵便番号</td>
                                    <td>{{ user.postal_code|default:"<span class='text-muted'>未設定</span>" }}</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">住所</td>
                                    <td>{{ user.address|default:"<span class='text-muted'>未設定</span>" }}</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">電話番号</td>
                                    <td>{{ user.phone_number|default:"<span class='text-muted'>未設定</span>" }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="text-end">
                        <a href="{% url 'accounts:profile_edit' %}" class="btn btn-primary">
                            <i class="fas fa-edit"></i> プロフィールを編集
                        </a>
                    </div>
                </div>
            </div>

            <!-- 有料会員のみの機能 -->
            {% if user.is_premium %}
            <div class="row">
                <!-- お気に入り店舗 -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="card-title mb-0"><i class="fas fa-heart text-danger"></i> お気に入り店舗</h6>
                            <a href="{% url 'restaurants:favorite_list' %}" class="btn btn-sm btn-outline-primary">すべて見る</a>
                        </div>
                        <div class="card-body">
                            {% if favorite_restaurants %}
                                {% for favorite in favorite_restaurants %}
                                <div class="d-flex align-items-center mb-3 {% if not forloop.last %}border-bottom pb-2{% endif %}">
                                    <div class="me-3">
                                        {% if favorite.restaurant.image %}
                                        <img src="{{ favorite.restaurant.image.url }}" class="rounded" width="60" height="60" style="object-fit: cover;">
                                        {% else %}
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                        {% endif %}
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">{{ favorite.restaurant.name }}</h6>
                                        <small class="text-muted">{{ favorite.restaurant.category.name }}</small>
                                    </div>
                                    <div>
                                        <a href="{% url 'restaurants:detail' favorite.restaurant.pk %}" class="btn btn-sm btn-outline-primary">詳細</a>
                                    </div>
                                </div>
                                {% endfor %}
                            {% else %}
                                <div class="text-center text-muted py-3">
                                    <i class="fas fa-heart fa-2x mb-2"></i>
                                    <p class="mb-0">まだお気に入りがありません</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- 最近のレビュー -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="card-title mb-0"><i class="fas fa-comments text-primary"></i> 最近のレビュー</h6>
                            <a href="{% url 'restaurants:review_list' %}" class="btn btn-sm btn-outline-primary">すべて見る</a>
                        </div>
                        <div class="card-body">
                            {% if recent_reviews %}
                                {% for review in recent_reviews %}
                                <div class="d-flex align-items-center mb-3 {% if not forloop.last %}border-bottom pb-3{% endif %}">
                                    {% if review.restaurant.image %}
                                        <img src="{{ review.restaurant.image.url }}" class="rounded me-3" width="50" height="50" style="object-fit: cover;">
                                    {% else %}
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas fa-utensils text-muted"></i>
                                        </div>
                                    {% endif %}
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            <a href="{% url 'restaurants:detail' review.restaurant.pk %}" class="text-decoration-none">
                                                {{ review.restaurant.name }}
                                            </a>
                                        </h6>
                                        <div class="text-warning mb-1">
                                            {% for i in "12345" %}
                                                {% if review.rating >= i|add:0 %}
                                                    <i class="fas fa-star"></i>
                                                {% else %}
                                                    <i class="far fa-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                            <span class="ms-1 text-muted small">{{ review.rating }}/5</span>
                                        </div>
                                        <small class="text-muted">{{ review.created_at|date:"Y年m月d日" }}</small>
                                    </div>
                                </div>
                                {% endfor %}
                            {% else %}
                                <div class="text-center text-muted py-3">
                                    <i class="fas fa-comment-slash fa-2x mb-2"></i>
                                    <p class="mb-0">まだレビューがありません</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- 予約履歴 -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0"><i class="fas fa-calendar-check text-success"></i> 予約履歴</h6>
                    <a href="{% url 'restaurants:reservation_list' %}" class="btn btn-sm btn-outline-primary">すべて見る</a>
                </div>
                <div class="card-body">
                    {% if recent_reservations %}
                        {% for reservation in recent_reservations %}
                        <div class="d-flex align-items-center mb-3 {% if not forloop.last %}border-bottom pb-3{% endif %}">
                            {% if reservation.restaurant.image %}
                                <img src="{{ reservation.restaurant.image.url }}" class="rounded me-3" width="50" height="50" style="object-fit: cover;">
                            {% else %}
                                <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-utensils text-muted"></i>
                                </div>
                            {% endif %}
                            <div class="flex-grow-1">
                                <h6 class="mb-1">
                                    <a href="{% url 'restaurants:detail' reservation.restaurant.pk %}" class="text-decoration-none">
                                        {{ reservation.restaurant.name }}
                                    </a>
                                </h6>
                                <div class="mb-1">
                                    <span class="badge {% if reservation.status == 'confirmed' %}bg-success{% elif reservation.status == 'cancelled' %}bg-danger{% else %}bg-warning text-dark{% endif %}">
                                        {% if reservation.status == 'confirmed' %}確定
                                        {% elif reservation.status == 'cancelled' %}キャンセル済み
                                        {% else %}{{ reservation.status }}
                                        {% endif %}
                                    </span>
                                </div>
                                <small class="text-muted">
                                    {{ reservation.reservation_date|date:"m月d日" }} {{ reservation.reservation_time|time:"H:i" }} | {{ reservation.number_of_people }}名
                                </small>
                            </div>
                        </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-calendar-times fa-2x mb-2"></i>
                            <p class="mb-0">まだ予約がありません</p>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% else %}
            <!-- 無料会員向けの有料会員案内 -->
            <div class="card border-warning mb-4">
                <div class="card-header bg-warning text-dark">
                    <h6 class="card-title mb-0"><i class="fas fa-crown"></i> プレミアム会員になりませんか？</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">プレミアム会員になると以下の機能が利用できます：</p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> 店舗の予約機能</li>
                        <li><i class="fas fa-check text-success"></i> レビューの投稿</li>
                        <li><i class="fas fa-check text-success"></i> お気に入り店舗の無制限保存</li>
                        <li><i class="fas fa-check text-success"></i> 詳細な検索フィルター</li>
                        <li><i class="fas fa-check text-success"></i> 優先サポート</li>
                    </ul>
                    <div class="text-center">
                        <a href="{% url 'accounts:subscription_plan' %}" class="btn btn-warning btn-lg">
                            <i class="fas fa-crown"></i> プレミアム会員になる（月額300円）
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}